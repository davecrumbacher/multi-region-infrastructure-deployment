  WebServerInstance:
    Type: 'AWS::EC2::Instance'
    Properties:
      InstanceType: t2.medium
      Tags:
        -
          Key: "Name"
          Value: !Join [ '-', ['WebServer', !Ref Environment] ]
      ImageId: !FindInMap
