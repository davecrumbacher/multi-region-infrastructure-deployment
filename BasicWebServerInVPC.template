              jq: []
          files:
            /var/www/html/index.html:
              content: !Join
                - |+

                - - >-
                    <h1>Congratulations, you have successfully launched the AWS
                    CloudFormation sample.</h1>
              mode: '000644'
              owner: root
              group: root
          commands:
            config1:
              command: !Join [ '', ['echo \<h2\>Web Server - ', !Ref Environment, '\</h2\> > /var/www/html/index.html'] ]
            config2:
              command: "echo \"<b>Instance ID:</b> `curl --silent http://169.254.169.254/latest/dynamic/instance-identity/document | jq -r .instanceId`\" >> /var/www/html/index.html"
            config3:
              command: "echo \"<br/><b>Instance Type:</b> `curl --silent http://169.254.169.254/latest/dynamic/instance-identity/document | jq -r .instanceType`\" >> /var/www/html/index.html"
            config4:
